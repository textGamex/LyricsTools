<Window x:Class="LyricsTools.UI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LyricsTools.UI"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid x:Name="MainGrid" KeyDown="MainGrid_KeyDown">
        <TextBox x:Name="AppId" HorizontalAlignment="Center" Margin="0,170,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="240" Height="22" TextChanged="AppId_TextChanged"/>
        <TextBox x:Name="SecretKey" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Top" Width="240" Height="23" Margin="0,217,0,0"/>
        <Button x:Name="LoginButton" Content="登录" HorizontalAlignment="Center" Margin="0,255,0,0" VerticalAlignment="Top" Width="60" Height="20" Click="LoginButton_Click" IsDefault="True"/>
        <Label Content="APP ID" HorizontalAlignment="Left" Margin="222,170,0,0" VerticalAlignment="Top"/>
        <Label Content="秘钥" HorizontalAlignment="Left" Margin="222,215,0,0" VerticalAlignment="Top"/>
        <Label Content="请使用百度提供的翻译API,个人版是免费的" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" Width="240"/>

    </Grid>
</Window>
