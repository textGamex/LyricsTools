<Window x:Class="LyricsTools.UI.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LyricsTools.UI"
        mc:Ignorable="d"
        Title="更新" Height="500" Width="800">
    <Grid>
        <Image x:Name="AuthorImage" HorizontalAlignment="Left" Height="128" VerticalAlignment="Top" Width="128"/>
        <TextBox x:Name="UpdateContent" HorizontalAlignment="Left" Margin="155,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Height="285" FontSize="14" IsReadOnly="True"/>
        <Label Content="更新内容" HorizontalAlignment="Left" Margin="367,100,0,0" VerticalAlignment="Top" Height="30" Width="228" FontSize="14"/>
        <Label x:Name="TextOut" Content="" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" Width="420" Height="25" FontSize="14"/>
        <Button x:Name="StateUpdate" Content="下载新版本" HorizontalAlignment="Center" Margin="0,425,0,0" VerticalAlignment="Top" Width="164" Background="White" Click="StateUpdate_Click" Height="34" FontSize="14"/>
        <Label x:Name="AuthorName" Content="" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Width="140" FontSize="13"/>

    </Grid>
</Window>
